{
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "node",
    "target": "ESNext",
    "module": "CommonJS",
    "outDir": "dist/",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "types/"
  },
  "include": ["src/**/*.ts"]
}
